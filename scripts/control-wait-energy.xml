     <FreeMemoryCoefficient>0.02</FreeMemoryCoefficient>
     <NetworkOutboundBytesCoefficient>0.0005</NetworkOutboundBytesCoefficient>
     <NetworkIncomingBytesCoefficient>0.0005</NetworkIncomingBytesCoefficient>
     <BaseLineEnergyConsumption>30</BaseLineEnergyConsumption>
     -->
  </LocalController>
<!-- could add application related coefficients here, in case it is needed -->

  <EventEngine>
     <Name>Empty</Name>
     <EndTime>86400</EndTime> <!-- 86400 seconds == 1 day -->
  </EventEngine>

  <RouterOptions>
      scripts/routeroptions-energy.xml
  </RouterOptions>

<!-- manual placement -->
<!-- <RouterOptions>
      scripts/routeroptions-noap.xml
  </RouterOptions>-->

</SimOptions>
